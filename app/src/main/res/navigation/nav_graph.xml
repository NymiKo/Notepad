<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recordListFragment">

    <fragment
        android:id="@+id/recordListFragment"
        android:name="com.example.notepad.fragments.RecordListFragment"
        android:label="fragment_record_list"
        tools:layout="@layout/fragment_record_list" >
        <action
            android:id="@+id/action_recordListFragment_to_aboutApplicationFragment"
            app:destination="@id/aboutApplicationFragment" />
        <action
            android:id="@+id/action_recordListFragment_to_settingsApp"
            app:destination="@id/settingsApp" />
    </fragment>
    <fragment
        android:id="@+id/aboutApplicationFragment"
        android:name="com.example.notepad.fragments.AboutApplicationFragment"
        android:label="О приложении"
        tools:layout="@layout/fragment_about_application" />
    <fragment
        android:id="@+id/settingsApp"
        android:name="com.example.notepad.fragments.SettingsApp"
        android:label="Настройки"
        tools:layout="@layout/fragment_settings_app" />
</navigation>